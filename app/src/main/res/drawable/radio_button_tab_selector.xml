<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--If radio button is checked. -->

    <item android:state_checked="true">
        <layer-list>

            <!-- Bottom blue color layer. -->
            <item>
                <color android:color="@color/trademarkRed" />
            </item>
            <!-- Top orange color layer. -->
            <item android:bottom="5dp" android:drawable="@color/cardview_light_background" />
        </layer-list>
    </item>

    <!--If radio button is unchecked. -->
    <item android:state_checked="false">
        <layer-list>
            <corners android:radius="15dp" />

            <!-- Bottom blue color layer. -->
            <item>
                <color android:color="@color/trademarkGold" />

            </item>
            <!-- Top orange color layer. -->
            <item android:bottom="0dp" android:drawable="@color/grey"/>
        </layer-list>
    </item>

</selector>