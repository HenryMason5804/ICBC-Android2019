<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".SignIn">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/qcc_logo"
        android:padding="60dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:paddingLeft="15dp"
            android:textColor="@color/trademarkRed"
            android:textStyle="bold"
            android:textSize="30dp"
    />

    <TextView
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
        
            android:layout_marginLeft="30dp"
            android:textColor="@color/trademarkRed"
            android:visibility="invisible"
    />
    <EditText
        android:singleLine="true"
        android:imeOptions="actionGo"
            android:id="@+id/idEdit"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:hint="1ab2"
            android:layout_gravity="center"
            android:maxLength="20"
            android:outlineProvider="none"
            android:background="@drawable/round_edit_text"/>
    <TextView
            android:id="@+id/idText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your ID here"
            android:layout_marginLeft="30dp"
            android:textColor="@color/trademarkRed"
            android:textSize="10dp"
            android:visibility="invisible"
    />

    <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="30dp"
            android:textColor="@color/trademarkRed"
            android:visibility="invisible"
    />
    <EditText
        android:imeOptions="actionGo"
        android:singleLine="true"
        android:id="@+id/nameEdit"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:hint="Name"
            android:layout_gravity="center"
            android:maxLength="20"
            android:outlineProvider="none"
            android:background="@drawable/round_edit_text"/>
    <TextView
            android:id="@+id/nameText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your name here"
            android:layout_marginLeft="30dp"
            android:textColor="@color/trademarkRed"
            android:textSize="10dp"
            android:visibility="invisible"
    />



    <Button
        android:id="@+id/submitID"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/round_button"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="233dp"
        android:textSize="15dp"
    />

</LinearLayout>